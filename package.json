{
  "name": "test-monorepo",
  "packageManager": "yarn@3.0.1",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace @test-monorepo/app run start",
    "build": "rm -rf packages/*/dist && tsc --build --force tsconfig.json",
    "test": "jest",
    "test:coverage": "yarn workspaces foreach run test:coverage && npx nyc report -t coverage --report-dir coverage --reporter=html --reporter=text-summary --reporter=lcov"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "jest": "^29.2.2",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
